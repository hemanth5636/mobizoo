<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="7dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"

        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="Bank name"
            android:padding="5dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/cardview_light_background"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/manage_bank_name" />

        <TextView
            android:text="Holder Name"
            android:textSize="20sp"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/manage_bank_holder_name"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />
        <TextView
            android:text="account no"
            android:textSize="20sp"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/manage_bank_account_no"
            android:textColor="@color/common_google_signin_btn_text_light_default" />
        <View android:background="#d3dcd3" android:layout_width="fill_parent" android:layout_height="1.0dip"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Switch
                android:text="Acitivate Account"
                android:layout_width="wrap_content"
                android:layout_height="40dp"

                android:id="@+id/switch1"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                 />
            <View android:background="#d3dcd3" android:layout_width="1.0dp" android:layout_height="match_parent"
                android:layout_marginTop="8dp"/>

            <Button
                android:text="delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_delete_bank"
                android:layout_gravity="right"

                />
        </LinearLayout>
    </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>