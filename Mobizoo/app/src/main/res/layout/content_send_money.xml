<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
       android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:text="Select Type"
                android:paddingBottom="10dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:text="UPI address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton_upi"
                    />
                <RadioButton
                    android:text="Bank Account"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton_bank_details"
                    />
            </LinearLayout>
            <RadioButton
                android:text="Mobile Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton_mobile"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/layout_bank_details"
        android:layout_height="wrap_content">
    <include layout="@layout/layout_bank_details"
        android:id="@+id/bank_details"

        />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View android:background="#d3dcd3" android:layout_width="fill_parent" android:layout_height="1.0dip"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:text="To : "
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:hint="Mobile Number"
                    android:textColor="@color/colorPrimary"
                    android:ems="10"
                    android:id="@+id/editText_mobile"
                    />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_contacts_100"
                    android:id="@+id/imageView_contacts"
                    android:layout_weight="1" />
            </LinearLayout>
            <View android:background="#d3dcd3" android:layout_width="fill_parent" android:layout_height="1.0dip"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_upi"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:text="To : "
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView333"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Enter Virtual Address"
                android:textColor="@color/colorPrimary"
                android:ems="20"
                android:id="@+id/editText_upi_address"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_amount"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:text="Enter Amount"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_home_screen_rupee"
                    android:id="@+id/imageView2"
                    />

                <EditText
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="3"
                    android:textColor="@color/colorPrimary"
                    android:hint="0.00"
                    android:textColorHint="@color/colorPrimary"

                    android:id="@+id/editText_amount"
                    />
            </LinearLayout>
            <View android:background="#d3dcd3" android:layout_width="150dp" android:layout_height="1.0dip"
                android:layout_gravity="center"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view23"
        android:layout_below="@id/card_view"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:gravity="left"
                android:lines="3"
                android:padding="5dp"
                android:background="#37d8d4d4"
                android:id="@+id/editText_message"
                android:layout_weight="1"
                android:hint="Leave Message" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/cardview_light_background"
        android:background="@color/colorPrimary"
        android:textSize="18.5dp"
        android:id="@+id/button_send_money"
        android:layout_alignParentBottom="true"
        android:text="Send"
        android:textAppearance="@style/TextAppearance.AppCompat" />
</RelativeLayout>