<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="7dp"

    android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_bill"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:padding="3dp"
                        android:textSize="20dp"
                        android:textColor="#21ad11"
                        android:id="@+id/textView_bill_s_no"/>
                    <TextView
                        android:text="Product name"
                        android:textSize="20dp"
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_bill_product_name"
                        android:textColor="#21ad11"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="Qty:5"
                        android:ems="5"
                        android:textSize="18dp"
                        android:padding="3dp"
                        android:paddingRight="5dp"
                        android:paddingStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_bill_quantity"
                         />
                </LinearLayout>

                <TextView
                    android:text="Product details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:padding="3dp"
                    android:id="@+id/textView_bill_product_details" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="price per : 250"
                        android:padding="3dp"
                        android:textSize="18dp"
                        android:ems="10"
                        android:id="@+id/textView_bil_price_per"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:padding="3dp"
                        android:paddingEnd="5dp"
                        android:layout_height="wrap_content"
                        android:text="total price : 1250"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:gravity="end"
                        android:id="@+id/textView_bill_total_price"/>
                </LinearLayout>
            </LinearLayout>
            </android.support.v7.widget.CardView>

    </android.support.design.widget.CoordinatorLayout>